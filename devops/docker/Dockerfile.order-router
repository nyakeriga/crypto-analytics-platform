# Dockerfile for Order Router Service
FROM mcr.microsoft.com/dotnet/sdk:8.0 AS build
WORKDIR /src

COPY execution-engine/order-router/OrderRouter/OrderRouter.csproj .
RUN dotnet restore

COPY execution-engine/order-router/OrderRouter/ .
RUN dotnet publish -c Release -o /app/publish

FROM mcr.microsoft.com/dotnet/aspnet:8.0 AS runtime
WORKDIR /app
COPY --from=build /app/publish .

EXPOSE 80
ENTRYPOINT ["dotnet", "OrderRouter.dll"]